@using Eva4_AuthMVC.Models.ViewModel
@model EditSuperAdminViewModel;

<h1>Editar SuperAdministrador</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSuperAdmin" method="post">

            <div class="form-group">
                <label asp-for="SuperAdmin.Name" class="control-label">Nombre</label>
                <input asp-for="SuperAdmin.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SuperAdmin.Email" class="control-label">Email</label>
                <input asp-for="SuperAdmin.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SuperAdmin.Password" class="control-label">Contraseña</label>
                <input asp-for="SuperAdmin.Password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary mt-3 mb-3" value="Guardar" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>
