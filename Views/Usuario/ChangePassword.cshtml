@using Eva4_AuthMVC.Models.ViewModel
@model ChangePasswordViewModel;

<div class="row justify-content-center m-5 p-5">
<form method="post" asp-action="ChangePassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3>Cambiar Contraseña</h3>
    <div class="mb-3">
        <label asp-for="OldPassword" class="form-label">Contraseña actual</label>
        <input asp-for="OldPassword" type="password" class="form-control" id="oldPassword">

    </div>
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label">Nueva contraseña</label>
        <input asp-for="NewPassword" type="password" class="form-control" id="newPassword">
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Repita nueva contraseña</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword">
    </div>
    <button type="submit" class="btn btn-primary">Cambiar</button>
</form>
</div>